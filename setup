#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

[ -f $DIR/.notfirstrun ] || cd $DIR && git submodule --init && touch $DIR/.notfirstrun
git pull
git submodule foreach git checkout master
git submodule foreach git pull

ln -fs $DIR $HOME/.vim
ln -fs $DIR/vimrc $HOME/.vimrc

